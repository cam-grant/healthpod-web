<h1 class="center">How would you describe your usual walking pace?</h1>

<div style="text-align: center; width: 40rem; margin: 4rem auto;">
  <ul class="options" data-option-group="user_data_physical_walking_pace" data-callback="validateForm" style="text-align: left;">
    <% UserData::PHYSICAL_WALKING_PACES.each do |t| %>
    <li class="option" data-value="<%= t[:id] %>"><span></span><%= t[:name] %></li>
    <% end %>
  </ul>
</div>

<%= form_tag physical_walking_pace_url, { :id => "form", :autocomplete => "off" } do |f| %>
  <%= hidden_field_tag 'user_data[physical_walking_pace]', '' %>
<% end %>

<script>

function validateForm(val) {
  $('#next').removeClass('disabled');
}

validateForm('');

</script>

<% content_for :footer_left do %>
  <label class="nav exit" for="exit-modal">Exit</label>
  <%= render :partial => 'partials/exit_modal', locals: { exit_url: hub_url } %>
<% end %>
<% content_for :footer_center do %>
  <%= progress_bar %>
<% end %>
<% content_for :footer_right do %>
  <%= next_button "$('#form').submit();", "#", "Finish" %>
<% end %>
