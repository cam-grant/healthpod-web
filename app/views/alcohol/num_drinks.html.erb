<h1 class="center">How many drinks do you have on a typical day?</h1>

<table class="" style="margin: 6rem auto;">
  <tr>
    <td style="vertical-align: middle; text-align: right;padding-right: 6rem;">
      <%= image_tag "drink_sizes.svg", style: "width: 42rem;" %>
    </td>
    <td>
      <ul class="options" data-option-group="user_data_alcohol_num_drinks" data-callback="validateForm" style="text-align: left;">
        <% UserData::ALCOHOL_NUM_DRINKS.each do |r| %>
        <li class="option" data-value="<%= r[:id] %>"><span></span><%= r[:name] %></li>
        <% end %>
      </ul>
    </td>
  </tr>
</table>

<%= form_tag alcohol_num_drinks_path, { :id => "form", :autocomplete => "off" } do |f| %>
  <%= hidden_field_tag 'user_data[alcohol_num_drinks]', '' %>
<% end %>

<script>

function validateForm(val) {
  $('#next').removeClass('disabled');
}

</script>

<% content_for :footer_left do %>
  <label class="nav exit" for="exit-modal">Exit</label>
  <%= render :partial => 'partials/exit_modal', locals: { exit_url: hub_url } %>
<% end %>
<% content_for :footer_center do %>
  <%= progress_bar %>
<% end %>
<% content_for :footer_right do %>
  <%= next_button "$('#form').submit();" %>
<% end %>
