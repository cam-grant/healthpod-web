<h1 class="center">Your waist measurement</h1>

<p style="text-align: center; font-size: 2rem;">
  Waist measurement is taken below the ribs,<br />usually at the level of the navel, while standing.
</p>

<div style="text-align: center; width: 28rem; margin: 3rem auto;">
  <ul class="options" data-option-group="user_data_diabetes_waist_measurement" data-callback="validateForm" style="text-align: left;">
    <% @user_data.waist_size_list.each do |t| %>
    <li class="option" data-value="<%= t[:id] %>">
      <span></span><%= t[:name] %>
    </li>
    <% end %>
  </ul>
</div>

<%= form_tag diabetes_waist_measurement_url, { :id => "form", :autocomplete => "off" } do |f| %>
  <%= hidden_field_tag 'user_data[diabetes_waist_measurement]', '' %>
<% end %>

<script>

function validateForm(val) {
  $('#next').removeClass('disabled');
}

</script>

<% content_for :footer_left do %>
  <label class="nav exit" for="exit-modal">Exit</label>
  <%= render :partial => 'partials/exit_modal', locals: { exit_url: hub_url } %>
<% end %>
<% content_for :footer_center do %>
  <%= progress_bar %>
<% end %>
<% content_for :footer_right do %>
  <%= next_button "$('#form').submit();", "#", "Finish" %>
<% end %>
